{**
 * ToDoList
 * Školní projekt k seznámení s Nette a ORM
 * 
 * @author IIVOS <miroslav.mrazek@gmail.com>
 *
 * @param string   $basePath web base path
 * @param string   $robots   tell robots how to index the content of a page (optional)
 * @param array    $flashes  flash messages
 *}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="description" content="">
	<meta name="robots" content="{$robots}" n:ifset="$robots">

	<title>ÚKOLNÍČEK - {#title|striptags}{/#}</title>

	<link rel="stylesheet" media="screen,projection,tv" href="{$basePath}/css/bootstrap.css">
	<link rel="stylesheet" media="screen,projection,tv" href="{$basePath}/css/screen.css">
	<link rel="stylesheet" media="print" href="{$basePath}/css/print.css">
	<link rel="shortcut icon" href="{$basePath}/favicon.ico">
	{#head}{/#}
</head>

<body>
	<script> document.body.className+=' js' </script>

	<div class="container">
		<div n:foreach="$flashes as $flash" class="flash {$flash->type}">{$flash->message}</div>
		<div class="navbar navbar-inverse">
			<div class="navbar-inner">
				<ul class="nav pull-left">
					<li n:if="$user->isLoggedIn()" class="active"><a n:href="Catalog:list">Seznamy</a></li>
				</ul>
				<ul class="nav pull-right">
					{if $user->isLoggedIn()}
						<li>{control logoutComponent}</li>
					{else}
						<li class="active"><a n:href="Sign:in">Přihlášení</a></li>
					{/if}
				</ul>
			</div>
		</div>

		{snippet content}
			{include #content}
		{/snippet}

	</div>

	{#scripts}
	<script src="{$basePath}/js/jquery.js"></script>
	<script src="{$basePath}/js/bootstrap.js"></script>
	<script src="{$basePath}/js/netteForms.js"></script>
	<script src="{$basePath}/js/nette.ajax.js"></script>
	<script src="{$basePath}/js/main.js"></script>
	{/#}
</body>
</html>
